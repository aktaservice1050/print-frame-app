  const linkInputWrap = document.querySelector('.input-link-wrap');
  if (linkInputWrap) {
    linkInputWrap.addEventListener('click', function(e) {
      e.stopPropagation(); // âœ… stop the click from bubbling to uploadArea
    });
  }
</script>

